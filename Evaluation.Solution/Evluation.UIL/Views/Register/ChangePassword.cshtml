                <section class="flexbox-container">
                    <div class="col-md-4 offset-md-4 col-xs-10 offset-xs-1 box-shadow-2 p-0">
                        <div class="card border-grey border-lighten-3 px-2 py-2 m-0">
                            <div class="card-header no-border">
                                <div class="card-title text-xs-center">
                                    <img src="~/app-assets/images/logo/stack-logo-dark.png" alt="branding logo">
                                </div>
                                <h6 class="card-subtitle line-on-side text-muted text-xs-center font-small-3 pt-2">
                                    <span>Change Password</span>
                                </h6>
                            </div>
                            <div class="card-body collapse in">
                                <div class="card-block">
                                    @*<form class="form-horizontal form-simple" action="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/html/ltr/vertical-menu-template-semi-dark/index.html" novalidate>*@
                                    <form asp-controller="Register" asp-action="UpdatePassword" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                                        @{
                                            if (ViewBag.Message == "Failure")
                                            {

                                                <div class="alert bg-danger alert-icon-left alert-dismissible fade in mb-2" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                    Password not successfuly changed
                                                </div>
                                            }

                                            if (ViewBag.Message == "Success")
                                            {
                                                <div class="alert alert-icon-left alert-success alert-dismissible fade in mb-2" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                    Your password successfully changed
                                                    @*<strong>Well done!</strong> You successfully read this <a href="#" class="alert-link">important</a> alert message.*@
                                                </div>
                                            }
                                        }
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg input-lg" id="current-password"
                                                   placeholder="Enter Current Password">
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                            <div class="form-control-position">
                                                <i class="fa fa-key"></i>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <input asp-for="NewPassword" type="password" class="form-control form-control-lg input-lg" id="new-password"
                                                   placeholder="Enter New Password">
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                            <div class="form-control-position">
                                                <i class="fa fa-key"></i>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <input asp-for="ConfirmNewPassword" type="password" class="form-control form-control-lg input-lg" id="confirm-password"
                                                   placeholder="Confirm New Password">
                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                            <div class="form-control-position">
                                                <i class="fa fa-key"></i>
                                            </div>
                                        </fieldset>
                                        <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="ft-unlock"></i> Update</button>
                                    </form>
                                </div>
                                @*<p class="text-xs-center">Already have an account ? <a href="/Login/Index" class="card-link">Login</a></p>*@
