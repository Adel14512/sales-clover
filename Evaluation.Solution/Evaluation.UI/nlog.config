<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Off"
      internalLogFile="C:\InternalLogs\internallog.txt">

	<variable name="logFilePath" value="C:\logs\Clover_FrontEnd.log"/>
	
	<targets>
		<target name="logfile"
            xsi:type="File"
            encoding="utf-8"
            fileName="${logFilePath}" archiveEvery="Day" maxArchiveFiles="30"
            layout="------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------${newline}
            CORRELATIONID = ${scopeproperty:item=correlationId}${newline}
            DATE = ${longdate}${newline}
            LEVEL = ${uppercase:${level}}${newline}
            USERNAME = ${scopeproperty:item=userName}${newline}
            MESSAGE = ${message}${newline}
            LOGGER = ${logger}
            ${onexception:
            ${newline}
            EXCEPTION ${exception:format=tostring,message,StackTrace}}"
            keepFileOpen="true"
    />
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile" />
	</rules>
</nlog>