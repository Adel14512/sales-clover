@model Evaluation.UI.Models.Renewal.ParametersVM
@{
	ViewData["Title"] = "Renewal";
	ViewData["SubTitle"] = "Parameters";
}
<link href="~/assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/assets/extra-libs/datatables.net-bs4/css/responsive.dataTables.min.css" />
<table id="tParameters" style="width:100%" class="responsive table table-bordered compact"></table>
<!-- Add Row Modal step 3-->
<div id="modalEdit" class="modal fade" tabindex="-1" role="dialog"
	 aria-hidden="true">
	<div class="modal-dialog">

		<div class="modal-content">
			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Edit Parameters</h4>
			</div>

			<!-- Modal body -->
			<form id="formModel">
				<div class="modal-body">
					<div class="row">
						<div class="md-3"><lable>Renewal Trigger Days</lable></div>
						<div class="md-6"> <input type="number" class="form-control" id="txtRenewalTriggerDays"></div>
						
					</div>

				</div>
			</form>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" id="btnCloseModal"
						data-bs-dismiss="modal">
					Close
				</button>
				<button id="btnSaveModel" class="btn btn-success">Save</button>
			</div>

		</div>
	</div>
</div>
@section Scripts {
	<script>
		var datatable = @Html.Raw(Json.Serialize(Model.RenewalParameter));
	</script>
	<script src="~/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/extra-libs/datatables.net-bs4/js/dataTables.responsive.min.js"></script>
	<script src="~/js/renewal/parameters.js"></script>
}
